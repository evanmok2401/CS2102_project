<!-- HEADER WITH LINK TO DRIVER -->
<div class="d-flex flex-md-row pt-2 justify-content-start align-items-end">
  <div class="">
    <h1>Drive</h1>
  </div>
  <div class="p-1">
    | or view as a <a href="/driver/">rider</a>
  </div>
  <div class="ml-auto">
    <button type="button" class="btn btn-primary btn-md" data-toggle="modal" data-target="#myModal">Create Ride</button>
  </div>
</div>




<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">

      <div class="modal-header">
        <h4 class="modal-title">Create Ride</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <form action="/rides/create" method="post">
          <input type="number" name="driver_field" value="{{driverId}}" hidden="true">
          
          <div class="modal-body">

            <div class="input-group mt-3">
              <div class="input-group-prepend">
                <label class="input-group-text" for="bid_amount_field">Bid</label>
              </div>
              <input type="number" name="bid_amount_field" value="{{this.bidamount}}" class="form-control" placeholder="Change bid">
              <div class="input-group-append">
                <button class="btn btn-outline-primary" type="submit">Change</button>
              </div>
            </div>

            <label for="date">Date: </label>
            <input id="date" type="date" name="date_field" value="2018-10-30">

            <label for="time">Time: </label>
            <input id="time" type="time" name="time_field" value="14:30">

            <label for="origin">Starting location: </label>
            <input id="origin" type="text" name="origin_field" value="Suntec City">

            <label for="destination">Destination: </label>
            <input id="destination" type="text" name="destination_field" value="M.A.A.D City">
          </div>


          <div class="modal-footer">
                    <button class="btn btn-primary" type="submit" value="OK">Submit</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
      </form>


    </div>

  </div>
</div>


<h2> Create Car Ride </h2>
<form action="/rides/create" method="post">
    <input type="number" name="driver_field" value="{{driverId}}" hidden="true">

    <label for="date">Date: </label>
    <input id="date" type="date" name="date_field" value="2018-10-30">

    <label for="time">Time: </label>
    <input id="time" type="time" name="time_field" value="14:30">

    <label for="origin">Starting location: </label>
    <input id="origin" type="text" name="origin_field" value="Suntec City">

    <label for="destination">Destination: </label>
    <input id="destination" type="text" name="destination_field" value="M.A.A.D City">

    <input type="submit" value="OK">
</form>

<hr />

<h2> Confirmed Rides </h2>
<table>
  <tr>
    <td> Date </td>
    <td> Time </td>
    <td> Trip start Location </td>
    <td> Destination </td>
    <td> Car </td>
  </tr>
{{#each confirmedRides}}
  <tr>
      <td>{{this.date}}</td>
      <td>{{this.time}}</td>
      <td>{{this.origin}}</td>
      <td>{{this.destination}}</td>
      <td>{{this.car}}</td>
    <td>
      <form action="/rides" method="get">
        <input id="ride_id" type="number" name="id" value="{{this.id}}" hidden="true">
        <input type="submit" value="View">
      </form>
    </td>
  </tr>
{{/each}}
</table>

<h2> Pending Rides </h2>
<table>
  <tr>
    <td> Date </td>
    <td> Time </td>
    <td> Trip start Location </td>
    <td> Destination </td>
    <td> Car </td>
  </tr>
{{#each pendingRides}}
  <tr>
      <td>{{this.date}}</td>
      <td>{{this.time}}</td>
      <td>{{this.origin}}</td>
      <td>{{this.destination}}</td>
      <td>{{this.car}}</td>
    <td>
      <form action="/rides" method="post">
        <input id="driver_id" type="text" name="driver" value="{{this.driver}}" hidden="true">
        <input id="date_id" type="text" name="date" value="{{this.date}}" hidden="true">
        <input id="time_id" type="text" name="time" value="{{this.time}}" hidden="true">
        <input id="origin_id" type="text" name="origin" value="{{this.origin}}" hidden="true">
        <input id="destination_id" type="text" name="destination" value="{{this.destination}}" hidden="true">
        <input type="submit" value="Edit">
      </form>
    </td>
    <td>
      <form action="/rides/delete" method="post">
        <input id="ride_id" type="number" name="driver" value="{{this.driver}}" hidden="true">
        <input id="date_id" type="text" name="date" value="{{this.date}}" hidden="true">
        <input id="time_id" type="text" name="time" value="{{this.time}}" hidden="true">
        <input id="origin_id" type="text" name="origin" value="{{this.origin}}" hidden="true">
        <input id="destination_id" type="text" name="destination" value="{{this.destination}}" hidden="true">
        <input type="submit" value="Delete">
      </form>
    </td>
  </tr>
{{/each}}
</table>
